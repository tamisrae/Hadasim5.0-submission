<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Suppliers</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color: #f8f9fa; padding: 20px;">

  <div class="container" style="max-width: 600px; margin-top: 40px;">
    <h1 class="text-center" style="color: #007bff;">All Suppliers</h1>

    <table class="table table-bordered table-striped">
      <thead style="background-color: #007bff; color: white;">
        <tr>
          <th class="text-center">Username</th>
          <th class="text-center">Action</th>
        </tr>
      </thead>
      <tbody>
        <% suppliers.forEach(supplier => { %>
          <tr>
            <td class="text-center"><%= supplier.username %></td>
            <td class="text-center">
              <form action="/supplier/orders/details/<%= supplier.supplier_id %>" method="GET" class="d-inline">
                <button type="submit" class="btn btn-primary btn-sm">Make an Order</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
