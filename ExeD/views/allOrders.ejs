<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color: #f8f9fa; padding: 20px;">

  <div class="container" style="max-width: 800px; margin-top: 40px;">
    <h2 class="text-center" style="color: #007bff;">All Orders</h2>

    <div class="d-flex justify-content-end mb-3">
      <a href="/supplier/grocer/allSuppliers" class="btn btn-primary">Make an Order</a>
    </div>

    <% if (orders && orders.length > 0) { %>
      <table class="table table-bordered">
        <thead style="background-color: #007bff; color: white;">
          <tr>
            <th>Order ID</th>
            <th>Supplier</th>
            <th>Status</th>
            <th>Order Date</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr>
              <td><a href="/supplier/orders/<%= order.id %>"><%= order.id %></a></td>
              <td><%= order.supplier_username %></td>
              <td><%= order.status_name %></td>
              <td><%= new Date(order.order_date).toLocaleDateString('en-US') %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <div class="alert alert-warning text-center">No orders found</div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
